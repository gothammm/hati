{
  "name": "@gothammm/hati",
  "version": "0.0.4",
  "description": "UI Component Library built for Solid.js",
  "scripts": {
    "app:dev": "vite serve app",
    "app:build": "vite build app",
    "app:serve": "vite preview app",
    "build": "tsup",
    "lint": "eslint --fix \"app/**/*.{ts,tsx}\" \"lib/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx}\" \"lib/**/*.{ts,tsx}\"",
    "format": "prettier --write \"app/**/*.{ts,tsx,css}\" \"lib/**/*.{ts,tsx,css}\""
  },
  "license": "MIT",
  "type": "module",
  "browser": {},
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": "./dist/index.cjs"
    },
    "./styles.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },
  "typesVersions": {},
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "private": false,
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gothammm/hati.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/gothammm/hati/issues"
  },
  "homepage": "https://github.com/gothammm/hati#readme",
  "devDependencies": {
    "@ark-ui/solid": "^0.3.0",
    "@solidjs/router": "^0.8.2",
    "@types/node": "^18.16.10",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "autoprefixer": "^10.4.14",
    "esbuild": "^0.17.19",
    "eslint": "^8.40.0",
    "eslint-plugin-solid": "^0.12.1",
    "lucide-solid": "^0.181.0",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "solid-js": "^1.7.5",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.5",
    "tsup": "^6.7.0",
    "tsup-preset-solid": "^0.1.8",
    "typescript": "^4.9.5",
    "vite": "^4.3.6",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-solid": "^2.7.0"
  },
  "peerDependencies": {
    "@ark-ui/solid": "^0.3.0",
    "solid-js": "^1.7.5"
  },
  "keywords": [
    "solid"
  ]
}
