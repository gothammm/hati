{
  "name": "@gothammm/hati",
  "version": "0.0.4",
  "description": "UI Component Library built for Solid.js",
  "scripts": {
    "build": "tsup",
    "lint": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "license": "MIT",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": "./dist/index.cjs"
    },
    "./styles.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },
  "typesVersions": {},
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "private": false,
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gothammm/hati.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/gothammm/hati/issues"
  },
  "homepage": "https://github.com/gothammm/hati#readme",
  "devDependencies": {
    "@ark-ui/solid": "^0.9.0",
    "@mapbox/rehype-prism": "^0.8.0",
    "@types/node": "^20.4.8",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "autoprefixer": "^10.4.14",
    "esbuild": "^0.18.19",
    "eslint": "^8.46.0",
    "eslint-plugin-solid": "^0.12.1",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "solid-js": "^1.7.9",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.6",
    "tsup": "^7.2.0",
    "tsup-preset-solid": "^2.0.2",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@ark-ui/solid": "^0.9.0",
    "solid-js": "^1.7.9"
  },
  "keywords": [
    "solid"
  ]
}
